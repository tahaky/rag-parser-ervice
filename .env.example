# Service Configuration
SERVICE_NAME=rag-parser-service
LOG_LEVEL=INFO
TEMP_DIR=/tmp/parser

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=parser-service
KAFKA_TOPIC_UPLOADED=document.uploaded
KAFKA_TOPIC_PARSED=document.parsed
KAFKA_TOPIC_ERRORS=errors.processing
KAFKA_MAX_POLL_INTERVAL_MS=300000
KAFKA_SESSION_TIMEOUT_MS=30000

# Database Configuration
DATABASE_URL=postgresql://parser:parser@localhost:5432/parser_db

# MinIO/S3 Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=documents
MINIO_SECURE=false
MAX_FILE_SIZE_MB=500

# Worker Configuration
WORKER_COUNT=4
GRACEFUL_SHUTDOWN_TIMEOUT=30

# Retry Configuration
MAX_RETRIES=3
RETRY_BACKOFF_SECONDS=5,15,45

# Parser Configuration
ENABLE_OCR=false
PARSER_VERSION=1.0.0

# Health Check Configuration
HEALTH_CHECK_HOST=0.0.0.0
HEALTH_CHECK_PORT=8080
